<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrdeng.mddemo.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="MD Widget"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat"/>

    <Button
        android:id="@+id/btn_coor_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coor  Fab"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_coor_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coor  AppbarLayout"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_coor_coll_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coor  Coll AppbarLayout"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>
</LinearLayout>
